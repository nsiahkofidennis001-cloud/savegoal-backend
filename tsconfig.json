{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "jest"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/modules/*": [
                "src/modules/*"
            ],
            "@/shared/*": [
                "src/shared/*"
            ],
            "@/config/*": [
                "src/config/*"
            ],
            "@/infra/*": [
                "src/infra/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "test-api.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}